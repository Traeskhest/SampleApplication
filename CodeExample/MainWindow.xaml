<mui:ModernWindow x:Class="CodeExample.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:CodeExample"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:mui="http://gu.com/ModernUI"
                  Title="Code Example"
                  Width="525"
                  Height="350"
                  MinWidth="800"
                  MinHeight="800"
                  Style="{DynamicResource TopAndBottomContentWindow}"
                  mc:Ignorable="d">
    <mui:ModernWindow.MainMenu>
        <mui:LinkGroup DisplayName="About Max">
            <mui:Link Source="Views/AboutMeView.xaml" />
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Skill Matrix">
            <mui:Link Source="Views/SkillMatrix.xaml" />
        </mui:LinkGroup>
    </mui:ModernWindow.MainMenu>
</mui:ModernWindow>
